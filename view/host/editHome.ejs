<%- include('../Partials/head') %>
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    header {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2rem;
        letter-spacing: 1px;
    }
    main{
        display: flex;
        justify-content: center;
    }

    main div {
        background: #fff;
        padding: 30px 40px;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    input[type='text'],
    input[type='number'] {
        padding: 12px 15px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 1rem;
        outline: none;
        transition: all 0.2s ease-in-out;
    }

    input[type='text']:focus,
    input[type='number']:focus {
        border-color: #2575fc;
        box-shadow: 0 0 5px rgba(37, 117, 252, 0.4);
    }

    input[type='submit'] {
        background: #2575fc;
        color: #fff;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    input[type='submit']:hover {
        background: #1b5fd3;
    }
    nav {
        margin-bottom: 40px;
    }
</style>

<body >
    <%- include('../Partials/nav') %>
    <header>
        <h1><%= editing?'Edit':'Register'%> Your Home</h1>
    </header>
    <main>
        <div>
         <form action="<%= editing ? '/host/update-home' : '/host/add-home' %>" method="post">
            <input type="hidden"  name="id" value="<%= editing ? homeDetails._id : '' %>">
            <input 
                type='text' 
                placeholder='Enter your home name' 
                name="homeName" 
                value="<%= editing ? homeDetails.homeName : '' %>" 
                required 
            />

            <input 
                type='number' 
                placeholder='Enter price per night' 
                name="homePrice" 
                value="<%= editing ? homeDetails.homePrice : '' %>" 
                required 
            />

            <input 
                type='text' 
                placeholder='Enter your location' 
                name="homeLocation" 
                value="<%= editing ? homeDetails.homeLocation : '' %>" 
                required 
            />

            <input 
                type='number' 
                placeholder='Enter ratings of your home' 
                name="homeRating" 
                value="<%= editing ? homeDetails.homeRating : '' %>" 
                step="0.1" 
                min="0" 
                max="5" 
                required 
            />
            <input type='submit' value="<%= editing ? 'Update Home' : 'Register Home' %>" />
    </form>
        </div>
    </main>
</body>
</html>
