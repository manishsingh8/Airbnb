<%- include('../Partials/head') %>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: #f6f8fa;
    margin: 0;
    padding: 0;
  }

  header {
    text-align: center;
    padding: 30px 0;
    background: linear-gradient(135deg, #2575fc, #6a11cb);
    color: #fff;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  header h1 {
    margin: 0;
    font-size: 2rem;
    letter-spacing: 1px;
  }

  main {
    padding: 40px 60px;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    justify-content: center;
  }

  li {
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 16px;
    padding: 25px;
    width: 280px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  li:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
  }

  li h3 {
    color: #2c3e50;
    margin-bottom: 8px;
    font-size: 1.2rem;
  }

  li p {
    margin: 5px 0;
    font-size: 14px;
    line-height: 1.5;
  }

  .anchor-btn {
    display: inline-block;
    background: #fff;
    color: #2575fc;
    border: 2px solid #2575fc;
    padding: 6px 16px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    margin-right: 8px;
    margin-top: 10px;
    font-size: 16px;
  }

  .anchor-btn:hover {
    background: #2575fc;
    color: #fff;
  }

  form {
    display: inline-block;
  }

  button.anchor-btn {
    cursor: pointer;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    margin-top: 100px;
  }

  .empty-state img {
    width: 200px;
    opacity: 0.8;
    margin-bottom: 20px;
  }

  .empty-state h2 {
    color: #34495e;
    margin-bottom: 10px;
  }

  .empty-state p {
    color: #7f8c8d;
    font-size: 16px;
  }

  .empty-state a {
    display: inline-block;
    background: #2575fc;
    color: #fff;
    padding: 10px 20px;
    border-radius: 8px;
    text-decoration: none;
    margin-top: 20px;
    transition: 0.3s;
  }

  .empty-state a:hover {
    background: #1d5fd4;
  }
</style>

<body>
  <%- include('../Partials/nav') %>

  <header>
    <h1>Manage Your Listings üè°</h1>
  </header>

  <main>
    <% if (registeredHome.length === 0) { %>
      <div class="empty-state">
        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076505.png" alt="No Homes">
        <h2>No Homes Registered Yet</h2>
        <p>Start by adding your first property to share it with the world ‚ú®</p>
        <a href="/host/add-home">Add New Home</a>
      </div>
    <% } else { %>
      <ul>
        <% registeredHome.forEach(home => { %>
          <li>
            <h3><%= home.homeName %></h3>
            <p style="color: #16a085;"><strong>Price Per Night:</strong> ‚Çπ<%= home.homePrice %></p>
            <p style="color: #2980b9;"><strong>Location:</strong> <%= home.homeLocation %></p>
            <p style="color: #e67e22;"><strong>Ratings:</strong> ‚≠ê <%= home.homeRating %></p>
            <div>
              <a href="/host/edit-home/<%= home._id %>?editing=true" class="anchor-btn">Edit</a>
              <form action="/host/delete-home/<%= home._id %>" method="POST">
                <button type="submit" class="anchor-btn">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
