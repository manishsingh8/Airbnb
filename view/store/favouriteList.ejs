<%- include('../Partials/head') %>

<body style="font-family: 'Poppins', sans-serif; background: #f6f8fa; margin: 0; padding: 0;">
  <%- include('../Partials/nav') %>

  <header style="text-align: center; padding: 30px 0; background: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
    <h1 style="color: #2c3e50; margin: 0;">Your Favorite List ‚ù§Ô∏è</h1>
  </header>

  <main style="padding: 40px;">
    <% if (favoriteHomes.length === 0) { %>
      <div style="text-align: center; margin-top: 100px;">
        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076505.png" 
             alt="No favorites" 
             style="width: 180px; opacity: 0.8; margin-bottom: 20px;">
        <h2 style="color: #34495e;">No Favorites Yet!</h2>
        <p style="color: #7f8c8d; font-size: 16px;">Start exploring and add homes to your favorite list üåø</p>
        <a href="/" 
           style="display: inline-block; margin-top: 20px; background: #3498db; color: #fff; 
                  text-decoration: none; padding: 10px 20px; border-radius: 8px; 
                  font-weight: 500; transition: background 0.3s;">
           Browse Homes
        </a>
      </div>
    <% } else { %>
      <ul style="list-style: none; padding: 0; display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
        <% favoriteHomes.forEach(home => { %>
          <li style="background: #fff; border: 1px solid #ddd; border-radius: 12px; padding: 20px; width: 250px;
                     box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s ease; cursor: pointer;"
              onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 6px 12px rgba(0,0,0,0.2)';"
              onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 8px rgba(0,0,0,0.1)';">

            <h3 style="color: #2c3e50; margin: 0;"><%= home.homeName %></h3>
            <p style="margin: 5px 0; font-size: 14px; color: #16a085;">
              <strong>Price Per Night:</strong> ‚Çπ<%= home.homePrice %>
            </p>
            <p style="margin: 5px 0; font-size: 14px; color: #2980b9;">
              <strong>Location:</strong> <%= home.homeLocation %>
            </p>
            <p style="margin: 5px 0; font-size: 14px; color: #e67e22;">
              <strong>Ratings:</strong> ‚≠ê <%= home.homeRating %>
            </p>
            <form action="/delete-favorite/<%= home._id %>" method="POST">
              <button type="submit" 
                      style="background: #e74c3c; color: white; border: none; padding: 8px 12px;
                             border-radius: 6px; cursor: pointer; font-size: 13px; transition: 0.3s;">
                Remove from Favorite
              </button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
