<%- include('../Partials/head') %>

<body>
    <%- include('../Partials/nav') %>
    <header>
        <h1>Home Details</h1>
    </header>
    <main>  
          <li style="background: #f9f9f9; border: 1px solid #ddd; border-radius: 12px; padding: 20px; width: 250px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s ease; cursor: pointer;"
              onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 6px 12px rgba(0,0,0,0.2)';"
              onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 8px rgba(0,0,0,0.1)';">
            <h3 style="color: #2c3e50; margin: 0px;"><%= homeDetails.homeName %></h3>
            <p style="margin: 5px 0; font-size: 14px; color: #16a085;"><strong>Price Per Night:</strong> ₹<%= homeDetails.homePrice %></p>
            <p style="margin: 5px 0; font-size: 14px; color: #2980b9;"><strong>Location:</strong> <%= homeDetails.homeLocation %></p>
            <p style="margin: 5px 0; font-size: 14px; color: #e67e22;"><strong>Ratings:</strong> ⭐ <%= homeDetails.homeRating %></p>
            <%- include('../Partials/favorite') %>
          </li>   
    </main>
</body>
</html>