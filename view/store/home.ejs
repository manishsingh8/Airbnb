<%- include('../Partials/head') %>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: #f6f8fa;
    margin: 0;
    padding: 0;
  }

  header {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    color: white;
    text-align: center;
    padding: 20px 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  header h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
    letter-spacing: 1px;
  }

  header p {
    font-size: 1.1rem;
    color: #e8e8e8;
  }

  main {
    padding: 50px 80px;
  }

  h3 {
    text-align: center;
    color: #2c3e50;
    font-size: 1.8rem;
    margin-bottom: 30px;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    justify-content: center;
  }

  li {
    background: #fff;
    border-radius: 16px;
    width: 280px;
    padding: 20px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    cursor: pointer;
    overflow: hidden;
    position: relative;
  }

  li:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  li img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 15px;
  }

  li h3 {
    color: #34495e;
    margin: 0 0 10px;
    font-size: 1.2rem;
  }

  li p {
    margin: 5px 0;
    font-size: 14px;
    line-height: 1.5;
  }

  .book-btn {
    display: block;
    width: 50%;
    background: linear-gradient(135deg, #2575fc, #6a11cb);
    color: white;
    border: none;
    padding: 10px;
    border-radius: 8px;
    margin-top: 10px;
    font-weight: 500;
    font-size: 15px;
    cursor: pointer;
    transition: 0.3s;
  }

  .book-btn:hover {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    transform: scale(1.05);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    margin-top: 100px;
  }

  .empty-state img {
    width: 220px;
    opacity: 0.9;
    margin-bottom: 20px;
  }

  .empty-state h2 {
    color: #34495e;
    margin-bottom: 10px;
  }

  .empty-state p {
    color: #7f8c8d;
    font-size: 16px;
  }

  .empty-state a {
    display: inline-block;
    background: #2575fc;
    color: #fff;
    padding: 10px 20px;
    border-radius: 8px;
    text-decoration: none;
    margin-top: 20px;
    transition: 0.3s;
  }

  .empty-state a:hover {
    background: #1d5fd4;
  }
  .btn-wrapper {
 display: flex;
 gap:10px;
  }
</style>

<body>
  <%- include('../Partials/nav') %>

  <header>
    <h1>Welcome to DreamStay üè°</h1>
    <p>Find your perfect stay ‚Äî cozy, affordable, and just a click away ‚ú®</p>
  </header>

  <main>
    <h3>Registered Homes</h3>

    <% if (registeredHome.length === 0) { %>
      <div class="empty-state">
        <h2>No Homes Available Yet</h2>
        <p>New listings are coming soon. Stay tuned!</p>
        <a href="/host/add-home">Add Your Home</a>
      </div>
    <% } else { %>
      <ul>
        <% registeredHome.forEach(home => { %>
          <li>
            <h3><%= home.homeName %></h3>
            <p style="color: #16a085;"><strong>Price Per Night:</strong> ‚Çπ<%= home.homePrice %></p>
            <p style="color: #2980b9;"><strong>Location:</strong> <%= home.homeLocation %></p>
            <p style="color: #e67e22;"><strong>Ratings:</strong> ‚≠ê <%= home.homeRating %></p>
            <div class="btn-wrapper">
              <button class="book-btn">Book Now</button>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
