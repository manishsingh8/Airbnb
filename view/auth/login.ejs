<%- include('../Partials/head') %>
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    header {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2rem;
        letter-spacing: 1px;
    }
    main{
        display: flex;
        justify-content: center;
    }

    main div {
        background: #fff;
        padding: 30px 40px;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    input[type='text'],
    input[type='email'],
    input[type='password'],
    input[type='number'] {
        padding: 12px 15px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 1rem;
        outline: none;
        transition: all 0.2s ease-in-out;
    }

    input[type='text']:focus,
    input[type='number']:focus {
        border-color: #2575fc;
        box-shadow: 0 0 5px rgba(37, 117, 252, 0.4);
    }

    input[type='submit'] {
        background: #2575fc;
        color: #fff;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    input[type='submit']:hover {
        background: #1b5fd3;
    }
     .signup-link {
        text-align: center;
        margin-top: 15px;
        font-size: 0.95rem;
        color: #555;
        box-shadow: none;
        margin: 0;
        padding: 0;
        margin-top: 16px;
    }

    .signup-link a {
        color: #2575fc;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .signup-link a:hover {
        color: #6a11cb;
    }
    nav {
        margin-bottom: 40px;
    }
    .error-box {
    background: #ffe6e6;
    border: 1px solid #f5bcbc;
    box-shadow: none;
    color: #b71c1c;
    border-radius: 10px;
    padding: 12px 16px;
    margin-bottom: 18px;
    display: flex;
    align-items: flex-start;
    gap: 10px;
    box-shadow: 0 4px 12px rgba(255, 0, 0, 0.1);
    animation: fadeIn 0.4s ease;
    max-width: 365px;
    }
    .error-list {
    margin: 0;
    padding-left: 18px;
    }

    .error-list li {
    list-style-type: disc;
    font-size: 0.95rem;
    line-height: 1.4;
    margin-bottom: 4px;
    }

</style>

<body >
    <%- include('../Partials/nav') %>
    <header>
        <h1>Login here...</h1>
    </header>
    <main>
        <div>
            <% if (errors && errors.length > 0) { %>
                <div class="error-box">
                    <ul class="error-list">
                    <% errors.forEach(err => { %>
                        <li><%= err %></li>
                    <% }) %>
                    </ul>
                </div>
            <% } %>
         <form action="/login" method="post">
            <input 
                type='email' 
                placeholder='Enter your email' 
                name="email"
                value="<%= oldInput.email ? oldInput.email : '' %>" 
                required 
            />
            <input 
                type='password' 
                placeholder='Enter your password' 
                name="password"
                required 
            />
            <input type='submit' value="Sign In" />
    </form>
     <div class="signup-link">
                Donâ€™t have an account? <a href="/signup">Sign up here</a>
            </div>
        </div>
    </main>
</body>
</html>




